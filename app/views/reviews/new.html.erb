<h1>Add Your review</h1>
<h3> Currently on <%= @restaurant.name %></h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  
  <%= f.submit 'Create Review', class: 'btn btn-primary' %>
<%end%>
<%= link_to 'Back', restaurants_path, class: 'btn btn-primary' %>
